<!DOCTYPE html>
<html>
  <body>
    <div class="container">
      <h1>Alterar Password Admin</h1>
      <%- include('../alertas') %>
      <form action="/admin/password" method="POST">
       
        <label for="password">Password atual</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password" required
        />

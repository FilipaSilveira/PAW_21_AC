<!DOCTYPE html>
<html>
  <body>
    <div class="container">
      <h1>Alterar Local</h1>
      <form action="/promotor/alterar_local/<%= local._id%>" method="POST">
        <label for="morada">Morada</label>
        <input type="text" id="morada" name="morada" placeholder="morada" value="<%= local.morada%>" required/>
        <label for="lotacao">Lotacao</label>
        <input
          type="number"
          id="lotacao"
          name="lotacao"
          placeholder="Lotacao" value="<%= local.lotacao%>" required
        />
        <label for="limitacao_lotacao">Limite lotacao</label>
        <input type="text" id="limitacao_lotacao" name="limitacao_lotacao" placeholder="Limite_lotacao" value="<%= local.limitacao_lotacao%>" required/>
        <button type="submit">Alterar Local</button>
      </form>
    </div>
  </body>
</html>

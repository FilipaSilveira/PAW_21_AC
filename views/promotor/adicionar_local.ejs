<!DOCTYPE html>
<html>
  <body>
    <div class="container">
      <h1>Adicionar Local de Espetaculos</h1>
      <form action="/promotor/adicionar_local" method="POST">
        <label for="morada">Morada</label>
        <input
          type="string"
          id="morada"
          name="morada"
          placeholder="Morada"
          required
        />
        <label for="lotacao">Lotaçao</label>
        <input
          type="number"
          id="lotacao"
          name="lotacao"
          placeholder="lotacao"
          min="1"
          required
        />
        <label for="limitacao_lotacao">Limitaçao da Lotaçao</label>
        <input
          type="number"
          id="limitacao_lotacao"
          name="limitacao_lotacao"
          placeholder="Limitacao da lotacao"
          min="1"
          max="99"
          required
        />
        <button type="submit">Guardar Local</button>
      </form>
    </div>
  </body>
</html>
